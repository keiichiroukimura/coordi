<% @clothes.each do |clothe| %>
  <div class="card" style="width: 50rem;">
    <div class="card-header">
        <div id = "index_name"> 
          <%= clothe.user.name %>
        </div>
    </div>
    
    <div class="card-body">
      <%= image_tag clothe.image_first.to_s, id: "index_image" %>
    </div>
    
    <div class="card-footer" style="height: 1rem;">
      <%= link_to 'Show', post, class: "btn btn-default ", id: "show" %>
        <br>
      <div id = "comment">
        <%= "コメント" %>
      </div>     
      <div id = "content">
        <%= simple_format(clothe.content) %>
      </div>
    </div>
  </div>
<% end %>
